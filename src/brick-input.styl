@import '../bower_components/brick-common/styles/mixins'
@import '../bower_components/brick-common/styles/params'

brick-input {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  display: block;
  .error {
    font-size: .8125em; /* 13/16 */
    display: none;
    color: red;
  }

  &.invalid {
    .error {
      display: inline;
      font-size: .5625em;
    }
  }

  &[row] {
    flexbox();
    input {
      flex: 1;
      margin-left: 12px;
    }
  }

  &[floating] {

    position: relative;
    label, input {
      display: block;
    }

    input {
      border: 0;
      width: 100%;
      height: 100%;
      transition: all .3s ease-in-out;
    }

    label {
      left: 0.1em;
      font-size: .6875em; /* 11/16 */
      position: absolute;
      top: 0em;
      opacity: 0;
      //display: none;
      font-family: Lucida Grande;
      color: #f1773b;
      transition: all .3s ease-in-out;
      //transition: color .3s linear;
    }

    &.show-label {
      label {
        top: 0;
        opacity: 1;
        transform: scale(.85,.85) translate(-10%,0);
      }
     input {
        padding: 1.2em 0 0 0;
      }
    }

    &.unhighlight-label {
      label {
        color: #999
      }
    }
  }

}
