@import '../bower_components/brick-common/styles/mixins'
@import '../bower_components/brick-common/styles/params'

brick-input {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  display: block;
  .error {
    font-size: .8125em; /* 13/16 */
    display: none;
    color: red;
  }

  &.invalid {
    .error {
      display: inline;
    }
  }

  &[row] {
    flexbox();
    input {
      flex: 1;
      margin-left: 12px;
    }
  }

  &[floating] {

    position: relative;
    label, input {
      //padding: 1em 0 0 0;
      display: block;
    }

    input {
      width: 100%;
      height: 100%;
      transition: all 0.3s ease-in-out;
    }

    label {
      z-index: 1;
      left: .3em;
      font-size: .6875em; /* 11/16 */
      position: absolute;
      top: .5em;
      opacity: 0;
      color: #f1773b;
      transition: all 0.3s ease-in-out;
    }

    &.show-label {
      label {
        top: .3em;
        z-index: 2;
        opacity: 1;
      }
     input {
        padding: 1.2em 0 0 0;
      }
    }

    &.unhighlight-label {
      label {
        color: #999
      }
    }
  }

}
